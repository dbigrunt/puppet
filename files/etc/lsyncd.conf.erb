settings = {
    statusFile    =   "/tmp/lsyncd.stat",
    logfile       =   "<%= logfile %>",
    nodaemon      =    "<%= nodaemon %>",
}

<% slaves.each do |line| -%>
sync{
    default.rsyncssh,
    source="<%= sourcedir %>",
    host="<%= remoteuser %>@<%= line %>",
    targetdir="<%= targetdir %>",
    exclude = { "<%= exclude %>" },
    rsyncOpts={
        <% rsyncOps.each do |line| -%>
        "<%= line %>",
        <% end -%>
    }
}
<% end -%>

